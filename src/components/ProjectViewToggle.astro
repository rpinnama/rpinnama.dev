---
import IconList from "@/assets/icons/IconList.svg";
import IconGrid from "@/assets/icons/IconGrid.svg";

export interface Props {
  currentView: string;
}

const { currentView } = Astro.props;
---

<div class="flex items-center space-x-2 bg-card rounded-lg border border-muted p-1">
  <button
    id="list-button"
    class:list={[
      "flex items-center justify-center p-2 rounded-md transition-colors",
      currentView === "list"
        ? "bg-accent text-white"
        : "hover:bg-muted/50"
    ]}
    aria-label="List view"
    title="List view"
  >
    <IconList class="size-5" />
  </button>
  <button
    id="grid-button"
    class:list={[
      "flex items-center justify-center p-2 rounded-md transition-colors",
      currentView === "grid"
        ? "bg-accent text-white"
        : "hover:bg-muted/50"
    ]}
    aria-label="Grid view"
    title="Grid view"
  >
    <IconGrid class="size-5" />
  </button>
</div>
